<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/i_mingpian002"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:adjustViewBounds="true"
        android:visibility="visible"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card"
        android:layout_alignBottom="@id/card"
        android:layout_alignRight="@id/card"
        >

        <ImageView
            android:id="@+id/card_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i_mingpianbeijing001"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"/>


        <TableLayout
            android:id="@+id/card_buttonstext_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_buttons"
            android:layout_alignRight="@id/card_buttons"
            android:layout_alignLeft="@id/card_buttons"
            android:layout_alignBottom="@id/card_buttons"
            android:useDefaultMargins="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/card_button_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"
                    />

                <TextView
                    android:id="@+id/card_button_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"
                    />

                <TextView
                    android:id="@+id/card_button_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"
                    />

                <TextView
                    android:id="@+id/card_button_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/card_button_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"/>

                <TextView
                    android:id="@+id/card_button_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"/>

                <TextView
                    android:id="@+id/card_button_text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_span="2"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10sp"/>
            </TableRow>

        </TableLayout>
        <TableLayout
            android:id="@+id/card_buttons_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_buttons"
            android:layout_alignRight="@id/card_buttons"
            android:layout_alignLeft="@id/card_buttons"
            android:layout_alignBottom="@id/card_buttons"
            android:useDefaultMargins="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_ditu001"
                    android:layout_weight="1"
                    android:layout_span="1"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_wangzhan001"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_span="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_youjian001"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_span="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_ditu001"
                    android:layout_weight="1"
                    android:layout_span="1" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_wangzhan001"
                    android:layout_weight="1"
                    android:layout_span="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_youjian001"
                    android:layout_weight="1"
                    android:layout_span="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_dianhua_001"
                    android:layout_weight="2"
                    android:layout_span="2" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>


</RelativeLayout>
