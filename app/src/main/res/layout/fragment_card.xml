<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/card_layout"
    >

    <ImageView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/i_mingpian002"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"

        android:visibility="visible"/>
    android:adjustViewBounds="true"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="50dp"
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/card"
        android:layout_alignBottom="@id/card"
        android:layout_alignRight="@id/card"
        android:layout_alignTop="@id/card"
        >


        <TextView
            android:id="@+id/fragment_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/card_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i_mingpianbeijing001"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"

            />
        android:adjustViewBounds="true"

        <TableLayout
            android:id="@+id/card_buttonstext_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_buttons"
            android:layout_alignRight="@id/card_buttons"
            android:layout_alignLeft="@id/card_buttons"
            android:layout_alignBottom="@id/card_buttons"
            android:useDefaultMargins="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/card_button_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"
                    />

                <TextView
                    android:id="@+id/card_button_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"
                    />

                <TextView
                    android:id="@+id/card_button_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"
                    />

                <TextView
                    android:id="@+id/card_button_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/card_button_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"/>

                <TextView
                    android:id="@+id/card_button_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20sp"/>

                <TextView
                    android:id="@+id/card_button_text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_span="2"
                    android:layout_gravity="bottom"
                    android:textAlignment="center"
                    android:layout_marginBottom="10sp"
                    android:textColor="#FFFFFF"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/card_buttons_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_buttons"
            android:layout_alignRight="@id/card_buttons"
            android:layout_alignLeft="@id/card_buttons"
            android:layout_alignBottom="@id/card_buttons"
            android:useDefaultMargins="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_ditu002"
                    android:layout_weight="1"
                    android:layout_span="1"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_wangzhan002"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_span="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_youjian002"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:layout_span="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_ditu002"
                    android:layout_weight="1"
                    android:layout_span="1"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_wangzhan002"
                    android:layout_weight="1"
                    android:layout_span="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_youjian002"
                    android:layout_weight="1"
                    android:layout_span="1" />

                <Button
                    android:id="@+id/button_phone_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_anniu_dianhua_002"
                    android:layout_weight="2"
                    android:layout_span="2" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>


</RelativeLayout>
