<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/i_beijing001"
    android:id="@+id/welcome_layout">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/i_logo001"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_welcome"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@id/imageLogo"
        android:layout_marginTop="50dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_import_from_contact"
        android:text="@string/button_import_from_contact"
        android:layout_below="@id/textView3"
        android:layout_marginTop="100dp"
        android:background="@drawable/b_anniu"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_import_from_cloud"
        android:layout_below="@id/button_import_from_contact"
        android:layout_marginTop="20dp"
        android:text="@string/button_import_from_cloud"
        android:background="@drawable/b_anniu" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButton"
        android:src="@drawable/close_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

</RelativeLayout>