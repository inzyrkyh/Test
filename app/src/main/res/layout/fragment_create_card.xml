<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.test.test.CreateCardFragment"
    android:clickable="true"
    >

    <!-- TODO: Update blank fragment layout -->



    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="240dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="#80000000"/>-->

    <TextView
        android:id="@+id/textview_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_textview_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/imageViewCardFrame"
        android:layout_alignLeft="@id/imageViewCardFrame"
        android:layout_marginTop="5dp"
        android:scaleType="center"
         />
    <ImageView
        android:id="@+id/imageViewCardFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/i_chuangjianmingpian"
        android:adjustViewBounds="true"
        android:layout_below="@id/textview_info"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_name"
        android:textSize="20sp"
        android:layout_alignTop="@id/imageViewCardFrame"
        android:layout_alignLeft="@id/imageViewCardFrame"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FF7F27"
        android:singleLine="true"
        android:layout_alignBaseline="@id/textViewName"
        android:layout_alignRight="@+id/imageViewCardFrame"
        android:layout_toRightOf="@id/textViewName"
        android:layout_marginRight="20dp"
        android:background="@drawable/myedittext_textfield_activated_holo_light"
        />
    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_phone"
        android:textSize="20sp"
        android:layout_below="@id/textViewName"
        android:layout_alignLeft="@id/textViewName"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FF7F27"
        android:singleLine="true"
        android:layout_toRightOf="@id/textViewPhone"
        android:layout_alignBaseline="@id/textViewPhone"
        android:layout_alignRight="@id/editTextName"
        android:inputType="phone"
        android:background="@drawable/myedittext_textfield_activated_holo_light"
        />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/imageViewCardFrame"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/imageViewCardFrame"
        android:layout_alignRight="@id/imageViewCardFrame"
        >

        <ImageButton
            android:id="@+id/button_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b_queren002"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b_guanbi002"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
